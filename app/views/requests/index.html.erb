<%= render "navbar" %>
 
<div class="container-fliud" style="margin-top: 5%; margin-left: 2%; margin-right: 2%;">
	<div class="row">
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-body" align="justify">
					<div class="dropdown">
				    <div class="btn btn-default dropdown-toggle container-fluid" style="width:50%;" type="button" data-toggle="dropdown">New Transaction
				    <span class="caret"></span></div>
				    <ul class="dropdown-menu" style="margin-top: 1px; margin-bottom: 1px; padding: 0px; width: 20px;">
				      <li><%= link_to 'Request Certificate', "/requests/form", class: "btn btn-default" %></li>
				      <li><%= link_to 'Business Clearance', "/requests/form", class: "btn btn-default" %></li>
				    </ul>
				  </div>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-body" align="center">
						Calendar of Activities
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    Reminder
			  </div>
			  <div class="panel-body" align="justify" style="overflow-y: scroll; max-height: 300px; width: auto;">
					<% @reminders.each do |w| %>
						<div class="well">
							<table style="width: 280px;">
								<tr>
									<td><strong><%= w.reminder_title %></strong></td>
									<td><%= link_to '', { action: :delete_reminder, id: w.id },method: :delete_reminder, data: { confirm: "Are you sure?" }, class: "glyphicon glyphicon-remove" %></td>
								</tr>
								<tr>
									<td><%= w.reminder_content %></td>
								</tr>
								<tr>
									<td><%= w.reminder_due %></td>
								</tr>
							</table>
						</div>
					<% end %>
			  </div>
				<%= render "reminder_form" %>
			</div>
		</div>
	</div>
</div>
<%= render "footer" %>
