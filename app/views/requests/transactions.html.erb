<%= render "navbar" %>
<%= render "footer" %>

<div class="container" align="center" style="padding-bottom:5%; margin-top:5%;">
  <h1>List of Transactions</h1>
  <div class="container" align="center">
    <div class="row">
      <div class="col-md-3"><strong>Transactions</strong></div>
      <div class="col-md-3"><strong>First Name</strong></div>
      <div class="col-md-2"><strong>Middle Name</strong></div>
      <div class="col-md-2"><strong>Last Name</strong></div>
      <div class="col-md-1"></div>
      <div class="col-md-1"></div>
    </div>
    <div class="row">
      <% @request.each do |t| %>
        <div class="col-md-3"><%= t.request %></div>
        <div class="col-md-3"><%= t.first_name %></div>
        <div class="col-md-2"><%= t.middle_name %></div>
        <div class="col-md-2"><%= t.last_name %></div>
        <div class="col-md-1"><%= link_to 'Destroy', "/requests/#{t.id}", method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-large btn-default' %></div>
        <div class="col-md-1"><%= link_to 'Show', "/requests/#{t.id}/transaction_view", :class => 'btn btn-large btn-default' %></div>
      <% end %>
    </div>
  </div>
</div>
