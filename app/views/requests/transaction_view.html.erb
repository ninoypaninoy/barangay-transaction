<%= render "navbar" %>
<div class="container" align="center" style="margin-top: 5%;">
  <h1> Transaction Information </h1>
  <table class="table table-bordered">
    <tr>
      <td><strong>Request: </strong><br><%= @request.request %></td>
      <td><strong>First Name: </strong><br><%= @request.first_name %></td>
      <td><strong>Middle Name: </strong><br><%= @request.middle_name %></td>
      <td><strong>Last Name: </strong><br><%= @request.last_name %></td>
    </tr>
    <tr>
      <td><strong>Nickname: </strong><br><%= @request.nickname %></td>
      <td colspan="3"><strong>Nickname: </strong><br><%= @request.address %></td>
    </tr>
    <tr>
      <td><strong>Contact No.: </strong><br><%= @request.contact_no %></td>
      <td><strong>Gender: </strong><br><%= @request.gender %></td>
      <td><strong>Status: </strong><br><%= @request.status %></td>
      <td><strong>Birthday: </strong><br><%= @request.birthday %></td>
    </tr>
    <tr>
      <td><strong>Birth Place: </strong><br><%= @request.birth_place %></td>
      <td><strong>Occupation: </strong><br><%= @request.occupation %></td>
      <td><strong>Monthly Income: </strong><br><%=@request.monthly_income %></td>
      <td><strong>Purpose: </strong><br><%= @request.purpose %></td>
    </tr>
    <tr>
      <td colspan="4"><strong>In case of emergency: </strong></td>
    </tr>
    <tr>
      <td><strong>Contact Person: </strong><br><%= @request.emergency_contact_person %></td>
      <td><strong>Relationship: </strong><br><%=@request.relationship %></td>
      <td><strong>Contact Number: </strong><br><%= @request.contact_no_2 %></td>
      <td></td>
    </tr>
  </table>
  <button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal">Generate Certificate</button>
  <%= link_to 'Back', "/requests/transactions", :class => 'btn btn-large btn-default pull-right' %>
</div>

<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Additional Information</h4>
        </div>
        <div class="modal-body">
          <%= form_for(@request) do |i| %>
          <table>
            <tr><td>Place of Issue: <%= i.text_field :place_issue, placeholder: 'Place of Issue', class: "form-control input-md" %></td></tr>
            <tr><td>Citizenship: <%= i.text_field :citizenship, placeholder: 'Citizenship', class: "form-control input-md" %></td></tr>
            <tr><td>Height: <%= i.text_field :height, placeholder: 'Height', class: "form-control input-md" %></td></tr>
            <tr><td>Weight: <%= i.text_field :weight, placeholder: 'Weight', class: "form-control input-md" %></td></tr>
            <tr><td>Basic Tax: <%= i.text_field :basic_tax, placeholder: 'Bastic Tax', class: "form-control input-md" %></td></tr>
            <tr><td>Additional Tax: <%= i.text_field :additional_tax, placeholder: 'Additional Tax', class: "form-control input-md" %></td></tr>
            <tr><td><%= i.submit 'Generate', class: "btn btn-default" %></td></tr>
          </table>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Close</button>
        </div>
      </div>

    </div>
  </div>

</div>
